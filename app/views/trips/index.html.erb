<h1> Road Trips </h1>
<hr />

<% if @trips.any? %>
<ul>
  <% @trips.each do |trip| %>
    <li>
      <%= link_to "#{trip.destination}", trip_path(trip) %> -
      <%= link_to 'Edit', edit_trip_path(trip) %> -
      <%= link_to 'Delete', trip_path(trip), method: :delete, data: { confirm: 'Delete Trip?' } %>
    </li>
    <% end %>
</ul>
<% else %>
  <h4> No Trips Found, Please Create One </h4>
<% end %>

<%= link_to 'New Trip', new_trip_path %>
