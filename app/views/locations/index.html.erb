<h1> Locations Visited </h1>
<hr />

<% if @locations.any? %>
<ul>
  <% @locations.each do |location| %>
    <li>
      <%= link_to "#{location.place}", trip_location_path(@trip, location) %> -
      <%= link_to 'Edit', edit_trip_location_path(@trip, location) %> -
      <%= link_to 'Delete', trip_location_path(@trip, location), method: :delete, data: { confirm: 'Delete Location?' } %>
    </li>
    <% end %>
</ul>
<% else %>
  <h4> No Locations Visited, Please Create One </h4>
<% end %>

<%= link_to 'New Location', new_trip_location_path %> <br /> 
<%= link_to 'Trip Page', trip_path(@trip) %>
